<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2px"
    android:orientation="horizontal">
    <ImageView android:id="@+id/image_food_item"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:background="#078"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:layout_weight="1">
        <TextView android:id="@+id/allfood_items_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/allfood_items_list_desc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/allfood_items_list_attention"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView android:id="@+id/allfood_items_list_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="right">
        <Button android:id="@+id/bt_allfood_items_list_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:textSize="12dp"
            android:text="@string/collect"/>
        <Button android:id="@+id/bt_allfood_items_list_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:textSize="12dp"
            android:text="@string/add"
            android:layout_gravity="bottom"/>
    </LinearLayout>

</LinearLayout>
