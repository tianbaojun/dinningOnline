<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView android:id="@+id/name_food_list_cart"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="30dp"
        android:textSize="16dp"
        android:text="@string/add"
        android:gravity="center_vertical"
        />
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="40dp">
        <Button android:id="@+id/numSub_food_list_cart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="－"
            android:textSize="20dp"
            android:gravity="top"
            android:layout_alignParentRight="true" />
        <TextView android:id="@+id/num_food_list_cart"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="12dp"
            android:textColorHighlight="#000"
            android:layout_toLeftOf="@id/numSub_food_list_cart"/>
        <Button android:id="@+id/numAdd_food_list_cart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="＋"
            android:gravity="top"
            android:textSize="20dp"
            android:layout_toLeftOf="@id/num_food_list_cart" />
        <TextView android:id="@+id/price_food_list_cart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:text="单价"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@id/numAdd_food_list_cart"/>
    </RelativeLayout>

</LinearLayout>
